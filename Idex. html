   <script>
          var menuBtn =document.getElementById
          ("menuBtn")
          var sidenav =document.getElementById
          ("sidenav")
          var menu =document.getElementById
          ("menu")
          sidenav.style.right="-150px"
          menuBtn.onclick=function(){
              if(sidenav.style.right=="-150px"){
          sidenav.style.right="0";  
          
              }
          else{ 
          sidenav.style.right="-150px";
          
          }  
          }
          
